<Application x:Class="WeatherApp.WPF_2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WeatherApp.WPF_2"
             xmlns:views="clr-namespace:WeatherApp.WPF_2.Views"
             xmlns:viewmodels="clr-namespace:WeatherApp.WPF_2.ViewModels">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:UserControl1ViewModel}">
            <views:UserControl1 />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:UserControl2ViewModel}">
            <views:UserControl2 />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:EnteringPageViewModel}">
            <views:EnteringPage />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:CurrentWeatherViewModel}">
            <views:CurrentWeatherPage />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ViewDitailsViewModel}">
            <views:ViewDitails />
        </DataTemplate>
    </Application.Resources>
</Application>
